{
	"imports": {
		"zod": "npm:zod@^3.24.4",
		"fromFileUrl": "jsr:@std/path@^1.0.9/from-file-url"
	},
	"fmt": {
		"bracePosition": "sameLine",
		"indentWidth": 4,
		"lineWidth": 200,
		"newLineKind": "lf",
		"semiColons": false,
		"useTabs": true,
		"useBraces": "preferNone",
		"trailingCommas": "onlyMultiLine",
		"singleQuote": false,
		"spaceSurroundingProperties": true,
		"spaceAround": false,
		"typeLiteral.separatorKind": "comma"
	},
	"tasks": {
		"recipes": "deno run -RW src/index.mts recipes"
	}
}
